{
  "name": "hue-remote",
  "version": "1.0.0",
  "description": "A remote Phillips Hue API that provides authenticated access to the Hue bridge",
  "main": "index.js",
  "scripts": {
    "test": "ava **/*.spec.js",
    "start": "node index.js",
    "linter": "eslint \"**/*.js\"",
    "linter-autofix": "eslint --fix .",
    "prettier": "prettier --write docs endpoints util index.js .eslintrc.json .travis.yml docker-compose.yml package.json README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yashdalfthegray/hue-remote.git"
  },
  "keywords": [
    "hue",
    "phillips",
    "hue",
    "hue",
    "remote"
  ],
  "author": "Yash Kulshrestha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yashdalfthegray/hue-remote/issues"
  },
  "homepage": "https://github.com/yashdalfthegray/hue-remote#readme",
  "dependencies": {
    "bluebird": "~3.7.2",
    "body-parser": "~1.19.0",
    "chalk": "^4.1.0",
    "color-space": "~1.16.0",
    "dotenv": "~8.2.0",
    "express": "~4.17.1",
    "helmet": "^3.23.3",
    "lodash": "~4.17.19",
    "morgan": "~1.10.0",
    "node-fetch": "~2.6.0",
    "redis": "~3.0.2",
    "request": "~2.88.2",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "ava": "~3.10.1",
    "eslint": "~7.5.0",
    "eslint-config-airbnb-base": "~14.2.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-import": "~2.22.0",
    "eslint-plugin-prettier": "~3.1.4",
    "husky": "~4.2.5",
    "lint-staged": "~10.2.11",
    "prettier": "~2.0.5"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write"
    ]
  }
}
