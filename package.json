{
  "name": "hue-remote",
  "version": "1.0.0",
  "description": "A remote Phillips Hue API that provides authenticated access to the Hue bridge",
  "type": "module",
  "exports": "./index.js",
  "scripts": {
    "test": "nyc ava",
    "test:no-coverage": "ava",
    "open-coverage-report": "npx open ./coverage/index.html",
    "start": "node index.js",
    "linter": "eslint \"**/*.js\"",
    "linter-autofix": "eslint --fix .",
    "prettier": "prettier --write docs endpoints util index.js .eslintrc.json .travis.yml docker-compose.yml package.json README.md",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yashdalfthegray/hue-remote.git"
  },
  "keywords": [
    "hue",
    "phillips",
    "hue",
    "hue",
    "remote"
  ],
  "author": "Yash Kulshrestha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yashdalfthegray/hue-remote/issues"
  },
  "homepage": "https://github.com/yashdalfthegray/hue-remote#readme",
  "dependencies": {
    "bluebird": "~3.7.2",
    "body-parser": "~1.19.1",
    "chalk": "~5.0.1",
    "color-space": "~2.0.0",
    "dotenv": "^16.0.0",
    "express": "~4.17.3",
    "helmet": "~5.0.2",
    "lodash-es": "~4.17.21",
    "morgan": "~1.10.0",
    "node-fetch": "~3.2.3",
    "redis": "~4.0.6",
    "rotating-file-stream": "~3.0.3",
    "winston": "~3.7.2",
    "winston-daily-rotate-file": "~4.6.1"
  },
  "devDependencies": {
    "ava": "~4.1.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "~15.0.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-prettier": "~4.0.0",
    "husky": "~7.0.4",
    "lint-staged": "^12.3.7",
    "nyc": "~15.1.0",
    "prettier": "~2.6.2"
  },
  "engines": {
    "node": " >=14.13.1 || >=16.0.0"
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write"
    ]
  },
  "nyc": {
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "**/*.spec.js"
    ],
    "extension": [
      ".js"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
