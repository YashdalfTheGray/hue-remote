    "eslint-plugin-import": "~2.14.0",
    "eslint-plugin-prettier": "~3.0.0",
    "husky": "~1.1.2",
    "lint-staged": "~7.3.0",
    "prettier": "~1.14.3"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "husky": {
