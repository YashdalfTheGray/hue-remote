  "bugs": {
    "url": "https://github.com/yashdalfthegray/hue-remote/issues"
  },
  "homepage": "https://github.com/yashdalfthegray/hue-remote#readme",
  "dependencies": {
    "bluebird": "~3.5.2",
    "body-parser": "~1.18.3",
    "chalk": "~2.4.1",
    "color-space": "~1.16.0",
    "dotenv": "~6.1.0",
    "express": "~4.16.4",
    "helmet": "~3.14.0",
    "lodash": "~4.17.11",
    "morgan": "~1.9.1",
    "redis": "~2.8.0",
    "request": "~2.88.0",
    "request-promise": "~4.2.2"
