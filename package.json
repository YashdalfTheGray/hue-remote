{
  "name": "hue-remote",
  "version": "1.0.0",
  "description": "A remote Phillips Hue API that provides authenticated access to the Hue bridge",
  "main": "index.js",
  "scripts": {
    "test": "nyc ava",
    "test:no-coverage": "ava",
    "open-coverage-report": "npx open ./coverage/index.html",
    "start": "node index.js",
    "linter": "eslint \"**/*.js\"",
    "linter-autofix": "eslint --fix .",
    "prettier": "prettier --write docs endpoints util index.js .eslintrc.json .travis.yml docker-compose.yml package.json README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yashdalfthegray/hue-remote.git"
  },
  "keywords": [
    "hue",
    "phillips",
    "hue",
    "hue",
    "remote"
  ],
  "author": "Yash Kulshrestha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yashdalfthegray/hue-remote/issues"
  },
  "homepage": "https://github.com/yashdalfthegray/hue-remote#readme",
  "dependencies": {
    "bluebird": "~3.7.2",
    "body-parser": "~1.19.0",
    "chalk": "~4.1.0",
    "color-space": "~1.16.0",
    "dotenv": "~8.2.0",
    "express": "~4.17.1",
    "helmet": "~4.1.1",
    "lodash": "~4.17.20",
    "morgan": "~1.10.0",
    "node-fetch": "~2.6.1",
    "redis": "~3.0.2",
    "request": "~2.88.2",
    "request-promise": "~4.2.6",
    "rotating-file-stream": "^2.1.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "ava": "~3.12.1",
    "eslint": "~7.9.0",
    "eslint-config-airbnb-base": "~14.2.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-import": "~2.22.0",
    "eslint-plugin-prettier": "~3.1.4",
    "husky": "~4.3.0",
    "lint-staged": "~10.4.0",
    "nyc": "~15.1.0",
    "prettier": "~2.1.2"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write"
    ]
  },
  "nyc": {
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "**/*.spec.js"
    ],
    "extension": [
      ".js"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
